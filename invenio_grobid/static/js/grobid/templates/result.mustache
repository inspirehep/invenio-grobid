<dl class="dl-horizontal">
  <dt>Title</dt>
  <dd>{{title}}</dd>
  <dt>Authors</dt>
  <dd>
    <ul>
    {{#authors}}
      <li>
        {{name}}
        {{#affiliations}}
          ({{value}})
        {{/affiliations}}
      </li>
    {{/authors}}
    </ul>
  </dd>
  <dt>Abstract</dt>
  <dd>{{abstract}}</dd>
  {{#keywords.0}}
  <dt>Keywords</dt>
  <dd>
    <ul>
    {{#keywords}}
      <li>{{value}}</li>
    {{/keywords}}
    </ul>
  </dd>
  {{/keywords.0}}
  <dt>References</dt>
  <dd>
    <ol>
      {{#references}}
        <li>
          {{#authors}}
            {{name}},
          {{/authors}}
          {{ref_title}},
          {{#journal_pubnote}}
            <i>{{journal_title}}</i>,
            {{#journal_volume}}{{journal_volume}}{{/journal_volume}}
            {{#journal_issue}}({{journal_issue}}){{/journal_issue}}
            {{#page_range}}:{{page_range}}{{/page_range}},
            {{year}}
          {{/journal_pubnote}}
        </li>
      {{/references}}
    </ol>
  </dd>
</dl>
